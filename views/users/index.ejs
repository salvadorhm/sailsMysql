<div class="container">
    <h1>Users</h1>

    <a href="users/create">Create</a>

    <table>
        <thead>
            <tr>
                <th data-field="username">Username</th>
                <th data-field="delete">Delete</th>
                <th data-field="update">Update</th>
                <th data-field="view">View</th>
            </tr>
        </thead>
        <tbody>

            <% users.forEach( function( user ){%>
                <tr>
                    <td>
                        <%= user.username %>
                    </td>
                    <td><a href='users/destroy/<%=user.id %>'>delete</a></td>
                    <td><a href='users/edit/<%=user.id %>'>update</a></td>
                    <td><a href='users/view/<%=user.id%>'>view</a></td>
                </tr>
                <% }); %>

        </tbody>
    </table>
</div>